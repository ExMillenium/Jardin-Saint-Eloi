      document.addEventListener("mousemove", function (e) {
        var box = document.getElementById("box");
        if (e.clientX >= window.innerWidth - 200) {
          // Si la souris est à 50px du bord droit
          box.style.right = "0"; // Fait apparaître la boîte
        } else {
          box.style.right = "-75%"; // Cache la boîte
        }
      });
